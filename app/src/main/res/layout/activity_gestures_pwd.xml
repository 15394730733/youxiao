<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e61625"
    android:orientation="vertical"
    android:weightSum="8">

    <LinearLayout
        android:id="@+id/logc_con"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical"
        android:paddingBottom="5dip" >
        
        <LinearLayout 
            android:id="@+id/layout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
        <ImageView
            android:id="@+id/director_main_image_0"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/gesture_dicate_syscle"/>
        <ImageView 
            android:id="@+id/director_main_image_1"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/gesture_dicate_syscle"/>
        <ImageView 
            android:id="@+id/director_main_image_2"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginBottom="10dip"
            android:background="@drawable/gesture_dicate_syscle"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
        <ImageView 
            android:id="@+id/director_main_image_3"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/gesture_dicate_syscle"/>
        <ImageView 
            android:id="@+id/director_main_image_4"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginBottom="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/gesture_dicate_syscle"/>
        <ImageView 
            android:id="@+id/director_main_image_5"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginBottom="10dip"
            android:background="@drawable/gesture_dicate_syscle"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/layout_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:orientation="horizontal">
            
        <ImageView 
            android:id="@+id/director_main_image_6"
            android:layout_width="15dip"
            android:layout_height="15dip"
           	android:layout_marginRight="10dip"
            android:background="@drawable/gesture_dicate_syscle"/>
        <ImageView 
            android:id="@+id/director_main_image_7"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/gesture_dicate_syscle"/>
        <ImageView 
            android:id="@+id/director_main_image_8"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_marginBottom="10dip"
            android:background="@drawable/gesture_dicate_syscle"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/user_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_launcher2" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_set_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="手势密码"
        
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/nine_con"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.2"
        android:gravity="center_horizontal|top"
        android:orientation="vertical"
        android:paddingBottom="30dip"
        android:paddingLeft="30dip"
        android:paddingRight="30dip" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="35dip" >

        <TextView
            android:id="@+id/id_tv_lock_return_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="返回登录页面"
            android:layout_marginRight="20dip"
            android:textColor="#ffffff"
            android:textSize="14sp" />
        <ImageView 
             android:background="#D3D3D3"
             android:layout_gravity="center_vertical"
             android:layout_height="12dp"
             android:layout_width="1dip"/>

        <TextView
            android:id="@+id/changepsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="修改手势密码"
            android:layout_marginLeft="20dip"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>
        android:text="@string/hello_world" />

</LinearLayout>
