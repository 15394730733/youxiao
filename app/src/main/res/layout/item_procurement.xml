<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/id_tv_commodity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金锣肉粒多200g"
            android:textColor="@color/grey800"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_tv_commodity_bulk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="200g"
            android:textColor="@color/grey800"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_tv_commodity_entire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="20箱"
            android:textColor="@color/grey800"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="0.3dp"
        android:layout_height="match_parent"
        android:background="#ccc" />

    <LinearLayout
        android:id="@+id/id_ll_quantity"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/id_tv_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/grey800"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件"
                android:textColor="@color/grey800"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_tv_bag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/grey800"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="根"
                android:textColor="@color/grey800"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0.3dp"
        android:layout_height="match_parent"
        android:background="#ccc" />

    <LinearLayout
        android:id="@+id/id_ll_price"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_box_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/grey800"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/grey800"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="0.3dp"
        android:layout_height="match_parent"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_price_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/grey800"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="0.3dp"
        android:layout_height="match_parent"
        android:background="#ccc" />

    <LinearLayout
        android:id="@+id/id_ll_production_date"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_production_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-12-15"
            android:textColor="@color/grey800"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="0.3dp"
        android:layout_height="match_parent"
        android:background="#ccc" />

    <LinearLayout
        android:id="@+id/id_ll_remark"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/id_tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="@color/grey800"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>