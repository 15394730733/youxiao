<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.statement.expirationdatewarning.ExpirationDateWarningActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">


        <include
            android:id="@+id/id_ll_stock_check_back"
            layout="@layout/item_layout_for_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:id="@+id/ll_select_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/id_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保质期预警"
                android:textColor="@color/grey900"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/id_iv_arrows"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/down" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_search_customer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/popup"
            android:src="@drawable/search_red" />

        <RelativeLayout
            android:id="@+id/popup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/add" />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#ccc" />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="合计"
                            android:textColor="@color/red400"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="match_parent"
                        android:background="#ccc" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="保质期"
                            android:textColor="@color/red400"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="match_parent"
                        android:background="#ccc" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="入库日期"
                            android:textColor="@color/red400"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="match_parent"
                        android:background="#ccc" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="剩余天数"
                            android:textColor="@color/red400"
                            android:textSize="14sp" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ccc" />

                <ListView
                    android:id="@+id/lv_expiration_date_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="#ccc" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/id_ll_select_stock_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey50"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/id_tv_select_stock_stock_one"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/background_selector"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:text="按最长排序"
                        android:textColor="@color/grey800"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_marginLeft="16dp"
                        android:background="#ccc" />

                    <TextView
                        android:id="@+id/id_tv_select_stock_stock_two"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/background_selector"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:text="按最短排序"
                        android:textColor="@color/grey800" />
                </LinearLayout>

                <View
                    android:id="@+id/id_view_select_stock_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#88bdbdbd"
                    android:visibility="gone" />
            </LinearLayout>
        </FrameLayout>
</LinearLayout>
