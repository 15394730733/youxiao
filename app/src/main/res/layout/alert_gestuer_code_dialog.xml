<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/corners"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="270dip"
        android:layout_height="175dip"
        android:gravity="center"
        android:background="@drawable/gest_code_bg" 
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/name_content"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            
            android:gravity="center|bottom"
            android:layout_gravity="center"
            android:orientation="horizontal"
            
           >
           

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
               	
                android:gravity="center"
                android:text="车销后台密码"
                android:textColor="@color/login_text1"
                android:textSize="20sp" />

           
        </LinearLayout>
         <LinearLayout
            android:id="@+id/login_xian"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_xian1" >
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/name_content1"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:layout_marginBottom="10dip"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:orientation="horizontal"
           
            >
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="20dip"
                android:gravity="center"
                android:layout_gravity="center">
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
               	
                android:gravity="center"
                android:text="工号:"
                android:textColor="@color/login_text1"
                android:textSize="16sp" />

            <TextView 
                android:id="@+id/acount_id"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
       

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:gravity="center"
            android:background="@drawable/getsture_edittext_bg"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginBottom="10dip"
            android:orientation="horizontal"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:layout_marginLeft="5dip"
                android:textColor="#000000"
                android:textSize="16sp"/>
			
            <com.youxiao.view.MyEditText
                android:id="@+id/houtai_code"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000"
                android:hint="请输入后台密码"
                android:gravity="left|center"
                android:drawableRight="@drawable/btn_clean"
                android:textCursorDrawable="@null"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:layout_marginRight="5dip"
                android:paddingLeft="5dip"
                android:singleLine="true"
                android:textColorHint="@color/login_text2"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_xian1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_xian1" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
           >

            <Button
                
                android:id="@+id/btn_cancel"
                android:layout_width="150dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:background="@drawable/mybutton_ground"
                android:text="取消"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/login_xian2"
                android:layout_width="1dip"
                android:layout_height="50dip" >

                <LinearLayout
                    android:layout_width="1dip"
                    android:layout_height="50dip"
                    android:background="@drawable/login_xian1" >
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="150dip"
                android:layout_weight="1"
                android:layout_height="50dip"
                android:layout_gravity="right"
                android:background="@drawable/mybutton_ground1"
                android:text="确定"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>