<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.salesActivity.runOderSelector.SkipperDetailActivity">


    <RelativeLayout
        android:id="@+id/activity_skipper_RL_title"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/activity_skipper_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/i"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/return_back"
                android:textColor="@color/red"
                android:textSize="14sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/skipper_detail"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_xiaobu"></View>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_tv_item_activity_skipper_detail_name"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="商品名称"
                    android:textColor="@color/red"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_xiaobu">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_tv_item_activity_skipper_detail_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="数量"
                        android:textColor="@color/red"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_xiaobu">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/id_tv_item_activity_skipper_detail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="单价"
                        android:textColor="@color/red"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_xiaobu">

                </LinearLayout>

                <TextView
                    android:id="@+id/id_tv_item_activity_skipper_detail_amount"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="合计"
                    android:textColor="@color/red"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_xiaobu">

                </LinearLayout>

                <TextView
                    android:id="@+id/id_tv_item_activity_skipper_detail_production_date"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="生产日期"
                    android:textColor="@color/red"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_xiaobu">

            </LinearLayout>
            <ListView
                android:id="@+id/activity_skipper_detail_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#ccc"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_tv_item_activity_skipper_detail_total_name"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="合计"
                    android:textColor="@color/red"/>

                <LinearLayout
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="#ccc">

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_for_activity_skipper_detail_total_NonRetailCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00整00散"
                            android:textColor="@color/red"/>

                        <!--                <TextView
                                            android:id="@+id/item_for_commodity_item_sales_total_NonRetailUnit"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="整"
                                            android:textColor="@color/red"/>

                                        <TextView
                                            android:id="@+id/item_for_commodity_item_sales_total_RetailCount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="00"
                                            android:textColor="@color/red"/>

                                        <TextView
                                            android:id="@+id/item_for_commodity_item_sales_total_RetailUnit"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="散"
                                            android:textColor="@color/red"/>-->
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="#ccc">

                </LinearLayout>

                <TextView
                    android:id="@+id/id_tv_item_unit_price"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/red"/>

                <LinearLayout
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="#ccc">

                </LinearLayout>

                <TextView
                    android:id="@+id/item_for_activity_skipper_detail_total_price"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="00.00"
                    android:textColor="@color/red"/>

                <LinearLayout
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="#ccc">

                </LinearLayout>

                <TextView
                    android:id="@+id/id_tv_item_production_date"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/red"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
