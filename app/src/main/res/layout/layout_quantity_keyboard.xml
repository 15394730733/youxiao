<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorKeyboardLine"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="0.3dp"
        android:background="#fafafa"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_keyboard_edittext_two"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/id_et_quantity_input_box_left"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_keyboard_edittext_left"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="28dp"
                    android:singleLine="true"
                    android:textColor="@color/grey800"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/id_iv_input_box_clear_left"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ease_search_clear"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/id_tv_quantity_text_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/grey300"
                android:gravity="center"
                android:text="件"
                android:textSize="14sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/id_et_quantity_input_box_right"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_keyboard_edittext_right"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="28dp"
                    android:singleLine="true"
                    android:textColor="@color/grey800"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/id_iv_input_box_clear_right"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end|center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ease_search_clear"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/id_tv_quantity_text_right"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/corner_keyboard_textview_right"
                android:gravity="center"
                android:text="根"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.3dp"
        android:background="@color/colorKeyboardLine"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_lay_keyboard_quantity_number_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard_quantity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_horizontal|bottom"
                android:text="1"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="28sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_lay_keyboard_quantity_number_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard_quantity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_horizontal|bottom"
                android:text="2"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="28sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center_horizontal|top"
                android:text="ABC"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_lay_keyboard_quantity_number_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard_quantity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_horizontal|bottom"
                android:text="3"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="28sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center_horizontal|top"
                android:text="DEF"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.3dp"
        android:background="@color/colorKeyboardLine"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_lay_keyboard_quantity_number_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard_quantity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_horizontal|bottom"
                android:text="4"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="28sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center_horizontal|top"
                android:text="GHI"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_lay_keyboard_quantity_number_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard_quantity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_horizontal|bottom"
                android:text="5"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="28sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center_horizontal|top"
                android:text="JKL"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_lay_keyboard_quantity_number_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard_quantity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_horizontal|bottom"
                android:text="6"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="28sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center_horizontal|top"
                android:text="MNO"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.3dp"
        android:background="@color/colorKeyboardLine"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_lay_keyboard_quantity_number_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard_quantity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_horizontal|bottom"
                android:text="7"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="28sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center_horizontal|top"
                android:text="PQRS"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_lay_keyboard_quantity_number_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard_quantity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_horizontal|bottom"
                android:text="8"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="28sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center_horizontal|top"
                android:text="TUV"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_lay_keyboard_quantity_number_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard_quantity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_horizontal|bottom"
                android:text="9"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="28sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center_horizontal|top"
                android:text="WXYZ"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.3dp"
        android:background="@color/colorKeyboardLine"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_lay_keyboard_quantity_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_keyboard_keypad"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/grey900"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_lay_keyboard_quantity_number_0"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0.3dp"
            android:layout_weight="1"
            android:background="@drawable/btn_keyboard_quantity"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colorKeyboardNumber"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_lay_keyboard_quantity_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0.3dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_keyboard_keypad"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/grey900"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>