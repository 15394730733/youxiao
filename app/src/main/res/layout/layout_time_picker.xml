<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Activity.salesActivity.commoditySelector.CommoditySelectorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.youxiao.view.WheelView
            android:id="@+id/year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f0f0f0"
            app:itemNumber="5"
            app:lineColor="#cbcbcb"
            app:lineHeight="1dp"
            app:maskHeight="20dp"
            app:noEmpty="true"
            app:normalTextColor="#bdbdbd"
            app:normalTextSize="14sp"
            app:selectedTextColor="#6b6b6b"
            app:selectedTextSize="22sp"
            app:unitHeight="40dp" />

        <com.youxiao.view.WheelView
            android:id="@+id/month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f0f0f0"
            app:itemNumber="5"
            app:lineColor="#cbcbcb"
            app:lineHeight="1dp"
            app:maskHeight="50dp"
            app:noEmpty="true"
            app:normalTextColor="#bdbdbd"
            app:normalTextSize="14sp"
            app:selectedTextColor="#6b6b6b"
            app:selectedTextSize="22sp"
            app:unitHeight="40dp" />

        <com.youxiao.view.WheelView
            android:id="@+id/day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f0f0f0"
            app:itemNumber="5"
            app:lineColor="#cbcbcb"
            app:lineHeight="1dp"
            app:maskHeight="50dp"
            app:noEmpty="true"
            app:normalTextColor="#9e9e9e"
            app:normalTextSize="14sp"
            app:selectedTextColor="#6b6b6b"
            app:selectedTextSize="22sp"
            app:unitHeight="40dp" />
    </LinearLayout>
</LinearLayout>