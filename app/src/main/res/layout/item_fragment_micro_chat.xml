<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/titleBar">

        <LinearLayout
            android:id="@+id/item_fragment_enterprise_LL"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_address_list"
                android:layout_width="72dp"
                android:layout_height="28dp"
                android:background="@drawable/tongxunlu_a"
                android:gravity="center" />

            <Button
                android:id="@+id/btn_message"
                android:layout_width="72dp"
                android:layout_height="28dp"
                android:background="@drawable/xiaoxi"
                android:gravity="center" />

            <Button
                android:id="@+id/btn_sales"
                android:layout_width="72dp"
                android:layout_height="28dp"
                android:background="@drawable/xiaosoquan"
                android:gravity="center" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#ccc" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey200">

        <FrameLayout
            android:id="@+id/item_fragment_enterprise_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>
</LinearLayout>
