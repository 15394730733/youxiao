<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100" >

        <RadioGroup
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/edit_yuan_register"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/address"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x60"
                android:background="@drawable/xx"
                android:button="@null"
                android:gravity="center"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/x60"
                android:background="#F00" />

            <RadioButton
                android:id="@+id/maseega"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x60"
                android:background="@drawable/txl"
                android:button="@null"
                android:gravity="center"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/x60"
                android:background="#F00" />

            <RadioButton
                android:id="@+id/overtime"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x60"
                android:button="@null"
                android:gravity="center"
                android:background="@drawable/xsq"
                android:textSize="14sp" />
        </RadioGroup>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#F00" />

    <com.youxiao.view.MyViewPager
        android:id="@+id/viewpater"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.youxiao.view.MyViewPager>

</LinearLayout>