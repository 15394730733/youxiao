<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.work.customermanager.CustomerDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <include
            android:id="@+id/id_lay_client_details_back"
            layout="@layout/item_layout_for_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="客户详情"
            android:textColor="@color/grey900"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x40"
            android:src="@drawable/star3x" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/share_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="天天连锁超市(三环新城店)"
                android:textColor="@color/red400"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/locate2x" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="16dp"
                    android:text="北京市顺义区，北京京报建筑公司，北京顺达通市南二路" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_lay_client_details_basic_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="基本信息"
                android:textSize="14sp" />

            <View
                android:id="@+id/id_view_client_details_basic_info"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red400" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_lay_client_details_route_adjustment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="路线调整"
                android:textSize="14sp" />

            <View
                android:id="@+id/id_view_client_details_route_adjustment"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red400" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_lay_client_details_visit_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="拜访状态"
                android:textSize="14sp" />

            <View
                android:id="@+id/id_view_client_details_visit_state"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red400" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_lay_client_details_geographical_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="地理位置" />

            <View
                android:id="@+id/id_view_client_details_geographical_location"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/red400" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#ccc" />


    <FrameLayout
        android:id="@+id/id_lay_client_details_for_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
