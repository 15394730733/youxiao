<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/uesr" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="优销客户" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ccc" />

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/home"
                android:layout_width="@dimen/x150"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:button="@null"
                android:drawableTop="@drawable/left_xiaoc"
                android:gravity="center"
                android:padding="5dp"
                android:text="销售"
                android:textSize="12sp" />

            <RadioButton
                android:layout_width="@dimen/x150"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:button="@null"
                android:drawableTop="@drawable/left_tuihuo"
                android:gravity="center"
                android:padding="5dp"
                android:text="退货"
                android:textSize="12sp" />

            <RadioButton
                android:layout_width="@dimen/x150"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:button="@null"
                android:drawableTop="@drawable/left_huanhuo"
                android:gravity="center"
                android:padding="5dp"
                android:text="换货"
                android:textSize="12sp" />

            <RadioButton
                android:layout_width="@dimen/x150"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:button="@null"
                android:drawableTop="@drawable/left_huijiang"
                android:gravity="center"
                android:padding="5dp"
                android:text="兑奖"
                android:textSize="12sp" />

            <RadioButton
                android:layout_width="@dimen/x150"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:button="@null"
                android:drawableTop="@drawable/rdiobutton_1"
                android:gravity="center"
                android:padding="5dp"
                android:text="结算"
                android:textSize="12sp"
                android:visibility="gone" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#ccc" />

</LinearLayout>