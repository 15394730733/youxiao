<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_item_commodity_name"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="商品名称"
            android:textSize="12sp"
            android:textColor="@color/redText" />

        <LinearLayout
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#ccc">

        </LinearLayout>
        <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="match_parent">

        <TextView
            android:id="@+id/id_tv_item_commodity_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="数量"
            android:textSize="12sp"
            android:textColor="@color/redText" />
        <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/bianji"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/id_tv_item_commodity_count"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/id_tv_item_commodity_count"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#ccc">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/id_tv_item_commodity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="单价"
                android:textSize="12sp"
                android:textColor="@color/redText" />
        <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/bianji"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/id_tv_item_commodity_price"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/id_tv_item_commodity_price"/>
    </RelativeLayout>

        <LinearLayout
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#ccc">

        </LinearLayout>

        <TextView
            android:id="@+id/id_tv_item_total_price"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="合计"
            android:textSize="12sp"
            android:textColor="@color/redText" />

        <LinearLayout
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#ccc">

        </LinearLayout>

        <TextView
            android:id="@+id/id_tv_item_production_date"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="生产日期"
            android:textSize="12sp"
            android:textColor="@color/redText" />
    </LinearLayout>

</LinearLayout>