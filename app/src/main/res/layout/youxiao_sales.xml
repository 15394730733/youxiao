<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100" >

        <ImageView
            android:id="@+id/button"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@drawable/meun" />

        <TextView
            android:id="@+id/caoshi"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x100"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="选择客户"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/append"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/tianjia" />

        <ImageView
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/caoshi"
            android:src="@drawable/jiantou" />

        <ImageView
            android:id="@+id/saomiao"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_alignTop="@+id/button"
            android:layout_marginRight="10sp"
            android:layout_toLeftOf="@+id/append"
            android:src="@drawable/saomiao" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/re"
        android:background="#ccc" />

    <com.youxiao.view.XiaoXi_ViewPager
        android:id="@+id/listviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#00000000"
        android:dividerHeight="0dp" >
    </com.youxiao.view.XiaoXi_ViewPager>

</LinearLayout>