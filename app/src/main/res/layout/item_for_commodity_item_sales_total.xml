<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_item_total_name"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="合计"
            android:textColor="@color/redText"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#ccc">

        </LinearLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_for_commodity_item_sales_total_NonRetailCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00整00散"
                    android:textColor="@color/redText"
                    android:textSize="12sp" />

                <!--                <TextView
                                    android:id="@+id/item_for_commodity_item_sales_total_NonRetailUnit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="整"
                                    android:textColor="@color/red"/>

                                <TextView
                                    android:id="@+id/item_for_commodity_item_sales_total_RetailCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00"
                                    android:textColor="@color/red"/>

                                <TextView
                                    android:id="@+id/item_for_commodity_item_sales_total_RetailUnit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="散"
                                    android:textColor="@color/red"/>-->
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#ccc">

        </LinearLayout>

        <TextView
            android:id="@+id/id_tv_item_unit_price"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/redText"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#ccc">

        </LinearLayout>

        <TextView
            android:id="@+id/item_for_commodity_item_sales_total_price"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="00.00"
            android:textColor="@color/redText"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#ccc">

        </LinearLayout>

        <TextView
            android:id="@+id/id_tv_item_production_date"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/redText"
            android:textSize="12sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#ccc" />

</LinearLayout>