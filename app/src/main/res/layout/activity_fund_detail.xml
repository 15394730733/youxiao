<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_xiaobu"
    tools:context="com.youxiao.Activity.statementActivity.accountsReceivable.FundDetailActivity">

        <RelativeLayout
            android:id="@+id/activity_fund_detail_RL_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/activity_fund_detail_back"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/i"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/return_back"
                    android:textColor="@color/red"
                    android:textSize="14sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/activity_fund_detail_TV_titleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1dp"
            android:layout_below="@id/activity_fund_detail_RL_title"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_fund_detail_customerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="州城庆宝商店"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/activity_fund_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-04-16 15:39:39"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/activity_fund_detail_remark"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="备注:"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/activity_fund_detail_LL1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_fund_detail_TV_fieldName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收 : "
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/activity_fund_detail_TV_fieldValue1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00元"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_fund_detail_LL2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_fund_detail_TV_fieldName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="欠 : "
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/activity_fund_detail_TV_fieldValue2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00元"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/activity_fund_detail_LL3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_fund_detail_TV_fieldValue3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="欠 : "
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/activity_fund_detail_TV_fieldName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00元"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_fund_detail_RL_LL2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/activity_fund_detail_RL_LL_redStatus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/red_rush_check"/>

                    <TextView
                        android:id="@+id/activity_fund_detail_RL_redTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="红冲"
                        android:textColor="@color/gray"
                        android:textSize="12sp"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/activity_fund_detail_RL_LL_print"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/print_check"/>

                    <TextView
                        android:id="@+id/activity_fund_detail_RL_printTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="打印"
                        android:textColor="@color/gray"
                        android:textSize="12sp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_fund_detail_RL_LL_cancellation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/print_defult"/>

                    <TextView
                        android:id="@+id/activity_fund_detail_RL_cancellationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="作废"
                        android:textColor="@color/gray"
                        android:textSize="12sp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
</RelativeLayout>
