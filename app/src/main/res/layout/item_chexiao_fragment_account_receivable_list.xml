<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_xiaobu"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chexiao_fragment_account_receivable_list_customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="州城庆宝商店"
                android:textSize="12sp"/>

            <TextView
            android:id="@+id/chexiao_fragment_account_receivable_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-04-16 15:39:39"
            android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/chexiao_fragment_account_receivable_list_IV"
            android:layout_toStartOf="@+id/chexiao_fragment_account_receivable_list_IV"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/chexiao_fragment_account_receivable_LL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收 : "
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/chexiao_fragment_account_receivable_list_qian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00元"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chexiao_fragment_account_receivable_LL_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="欠 : "
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/chexiao_fragment_account_receivable_list_shou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00元"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/chexiao_fragment_account_receivable_list_IV"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/arrows_right_grey"/>
    </RelativeLayout>

</LinearLayout>