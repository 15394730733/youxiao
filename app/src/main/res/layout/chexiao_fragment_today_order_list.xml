<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray_xiaobu"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/content_item_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/transaction_content_item_mark"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chexiao_fragment_today_order_list_customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="州城庆宝商店"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/chexiao_fragment_today_order_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-04-16 15:39:39"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@+id/chexiao_fragment_today_order_list_IV"
            android:layout_toStartOf="@+id/chexiao_fragment_today_order_list_IV"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计 : "
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/chexiao_fragment_today_order_list_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="196.00元"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/chexiao_fragment_today_order_list_IV"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/jiantou_a"/>

        <ImageView
            android:id="@+id/transaction_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/transaction_red"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/transaction_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/transaction_cancel"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>